# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"
Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

	# DEVELOP MACHINE
	config.vm.define "develop", primary: true do |develop|

		develop.vm.box = "chef/centos-6.6"
		#develop.vm.box_url = ""

		develop.vm.network "forwarded_port", guest: 22, host: 4444, id: "ssh", auto_correct: true
		develop.vm.network "forwarded_port", guest: 2368, host: 2368, auto_correct: true
		#develop.vm.network "forwarded_port", guest: 443, host: 443
		#develop.vm.network "forwarded_port", guest: 3306, host: 3306

		develop.vm.hostname = "vagrant.dev"
		develop.vm.network :private_network, ip: "192.168.80.80"

		develop.vm.synced_folder ".", "/vagrant", type: "nfs"
		#develop.vm.synced_folder "/local/path", "/remote", type: "nfs"
		#develop.vm.synced_folder ".", "/vagrant", :mount_options => ["dmode=777","fmode=777"]

		develop.vm.provider "virtualbox" do |vb|
			#vb.gui = true
			vb.customize ["modifyvm", :id, "--memory", "2048"]
			# https://github.com/mitchellh/vagrant/issues/713#issuecomment-17296765
			vb.customize ["setextradata", :id, "VBoxInternal2/SharedFoldersEnableSymlinksCreate/v-root", "1"]
		end

		develop.vm.provision "shell", path: "provision.sh"
	end
end
